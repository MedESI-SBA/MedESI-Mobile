<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestPassword"

    android:background="#fff">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/topmargin"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topmargin"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.04"
        android:id="@+id/topTextContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topTextContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.02"
        android:id="@+id/topmargin2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topmargin2"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/topTextContainer2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topTextContainer2"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.04"
        android:id="@+id/topmargin3"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topmargin3"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/logoContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.04"
        android:id="@+id/topmargin4"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="1"
        android:id="@+id/leftmargin"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintHeight_percent="1"
        android:id="@+id/rightmargin"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintTop_toBottomOf="@id/topmargin4"
        app:layout_constraintHeight_percent="0.075"
        android:id="@+id/emailContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.02"
        android:id="@+id/topmargin5"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintTop_toBottomOf="@id/topmargin5"
        app:layout_constraintHeight_percent="0.075"
        android:id="@+id/passwordContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.01"
        android:id="@+id/topmargin6"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintTop_toBottomOf="@id/topmargin6"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.4"
        android:id="@+id/forgotPasswordContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/bottommargin1"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintBottom_toTopOf="@id/bottommargin1"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.7"
        android:id="@+id/questionContainer"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/questionContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.01"
        android:id="@+id/bottommargin2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintBottom_toTopOf="@id/bottommargin2"
        app:layout_constraintHeight_percent="0.03"
        android:id="@+id/orContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/orContainer"
        app:layout_constraintEnd_toEndOf="@id/orContainer"
        app:layout_constraintTop_toTopOf="@id/orContainer"
        app:layout_constraintBottom_toBottomOf="@id/orContainer"
        app:layout_constraintWidth_percent="0.1"
        android:id="@+id/orrContainer"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/orContainer"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.01"
        android:id="@+id/bottommargin3"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/leftmargin"
        app:layout_constraintEnd_toStartOf="@id/rightmargin"
        app:layout_constraintBottom_toTopOf="@id/bottommargin3"
        app:layout_constraintHeight_percent="0.1"
        android:id="@+id/buttonContainer"
        />









    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/topTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/topTextContainer"
        app:layout_constraintStart_toStartOf="@id/topTextContainer"
        app:layout_constraintEnd_toEndOf="@id/topTextContainer"
        android:text="@string/hey_there"
        android:textAlignment="center"
        android:textColor="#1D1617"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="100dp"
        android:textFontWeight="700"

        android:autoSizeTextType="uniform"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/topTextContainer2"
        app:layout_constraintBottom_toBottomOf="@id/topTextContainer2"
        app:layout_constraintStart_toStartOf="@id/topTextContainer2"
        app:layout_constraintEnd_toEndOf="@id/topTextContainer2"
        android:text="@string/reset_your_password"
        android:textAlignment="center"
        android:textColor="#1D1617"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeMinTextSize="10dp"
        android:textFontWeight="900"

        android:autoSizeMaxTextSize="100dp"
        android:autoSizeTextType="uniform"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/logoContainer"
        app:layout_constraintBottom_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="@id/logoContainer"
        app:layout_constraintEnd_toEndOf="@id/logoContainer"
        android:src="@drawable/logodarker"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/passwordContainer"
        app:layout_constraintBottom_toBottomOf="@id/passwordContainer"
        app:layout_constraintStart_toStartOf="@id/passwordContainer"
        app:layout_constraintEnd_toEndOf="@id/passwordContainer"
        android:id="@+id/emailEditText"
        android:background="@drawable/inputbg"
        android:hint="@string/email"
        android:textColorHint="#ADA4A5"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:textFontWeight="900"
        android:paddingHorizontal="10dp"
        />



    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/buttonContainer"
        app:layout_constraintBottom_toBottomOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="@id/buttonContainer"
        android:background="@drawable/btn"
        android:id="@+id/loginButton"
        app:layout_constraintDimensionRatio="21:4"
        android:elevation="10dp"
        android:text="@string/reset_your_passwordd"
        android:textFontWeight="900"
        
        />






</androidx.constraintlayout.widget.ConstraintLayout>