<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#fff">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ff0000"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.02"
        android:id="@+id/topmargin"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topmargin"
        android:background="#00ff00"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.04"
        android:id="@+id/topTextContainer"
        />







    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/topTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/topTextContainer"
        app:layout_constraintStart_toStartOf="@id/topTextContainer"
        app:layout_constraintEnd_toEndOf="@id/topTextContainer"





</androidx.constraintlayout.widget.ConstraintLayout>